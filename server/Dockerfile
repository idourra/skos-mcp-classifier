FROM python:3.11-slim
WORKDIR /app
COPY server/requirements.txt .
RUN pip install -r requirements.txt
COPY server/ ./
COPY data/taxonomy.jsonld /app/data/taxonomy.jsonld
RUN python skos_loader.py /app/data/taxonomy.jsonld
EXPOSE 8080
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]
