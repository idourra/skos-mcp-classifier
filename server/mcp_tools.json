{
  "name": "skos-taxonomy",
  "version": "1.0.0",
  "description": "SKOS taxonomy tools via MCP",
  "tools": [
    {
      "name": "search_concepts",
      "description": "Buscar conceptos por texto/notation en SKOS",
      "input_schema": {
        "type": "object",
        "properties": { "query": {"type":"string"}, "lang":{"type":"string","default":"es"}, "k":{"type":"integer","default":10}},
        "required": ["query"]
      }
    },
    {
      "name": "get_context",
      "description": "Recupera labels/definiciones/relaciones de un concepto",
      "input_schema": {
        "type": "object",
        "properties": { "concept_uri": {"type":"string"} },
        "required": ["concept_uri"]
      }
    },
    {
      "name": "validate_notation",
      "description": "Valida un c√≥digo Treew (skos:notation)",
      "input_schema": {
        "type": "object",
        "properties": { "notation": {"type":"string"} },
        "required": ["notation"]
      }
    }
  ]
}
